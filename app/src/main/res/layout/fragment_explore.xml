            android:textColor="@color/red"
            app:layout_constraintEnd_toEndOf="@+id/pickerUserVoteMin"
            app:layout_constraintStart_toStartOf="@+id/pickerUserVoteMin"
            app:layout_constraintTop_toBottomOf="@+id/pickerUserVoteMin" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:text="Genres"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="@+id/textView10"
            app:layout_constraintHorizontal_bias="0.47"
            app:layout_constraintStart_toStartOf="@+id/textView10"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <Button
            android:id="@+id/button"
            android:layout_width="66dp"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="40dp"
            android:text="add"
            android:textSize="8sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/pickerGenres"
            app:layout_constraintStart_toStartOf="@+id/pickerGenres"
            app:layout_constraintTop_toBottomOf="@+id/pickerGenres" />

        <TextView
            android:id="@+id/tvSelectedGenres"
            android:layout_width="97dp"
            android:layout_height="117dp"
            android:layout_marginStart="24dp"
            android:gravity="center"
            android:text=""
            app:layout_constraintBottom_toBottomOf="@+id/pickerGenres"
            app:layout_constraintStart_toEndOf="@+id/pickerGenres"
            app:layout_constraintTop_toTopOf="@+id/pickerGenres" />



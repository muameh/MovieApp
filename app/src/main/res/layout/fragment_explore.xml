            android:text="Rate"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="@+id/textView1343"
            app:layout_constraintStart_toStartOf="@+id/textView1343"
            app:layout_constraintTop_toBottomOf="@+id/textView1343" />

        <NumberPicker
            android:id="@+id/pickerRateMin"
            android:layout_width="65dp"
            android:layout_height="125dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="64dp"
            android:textColor="@color/red"
            app:layout_constraintBottom_toBottomOf="@+id/textView19"
            app:layout_constraintEnd_toEndOf="@+id/pickerReleaseDateMin"
            app:layout_constraintStart_toStartOf="@+id/pickerReleaseDateMin"
            app:layout_constraintTop_toTopOf="@+id/tvReleaseDateMin"
            app:layout_constraintVertical_bias="0.425" />

        <TextView
            android:id="@+id/tvRateMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/red"
            app:layout_constraintEnd_toEndOf="@+id/pickerRateMin"
            app:layout_constraintStart_toStartOf="@+id/pickerRateMin"
            app:layout_constraintTop_toBottomOf="@+id/pickerRateMin" />

        <TextView
            android:id="@+id/tvRateMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/red"
            app:layout_constraintEnd_toEndOf="@+id/pickerRateMax"
            app:layout_constraintStart_toStartOf="@+id/pickerRateMax"
            app:layout_constraintTop_toBottomOf="@+id/pickerRateMax" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_marginTop="120dp"
            android:gravity="center"
            android:text="Runtime (min)"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="@+id/textView19"
            app:layout_constraintStart_toStartOf="@+id/textView19"
            app:layout_constraintTop_toBottomOf="@+id/textView19" />

        <NumberPicker
            android:id="@+id/pickerRuntimeMin"
            android:layout_width="65dp"
            android:layout_height="125dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="64dp"
            android:textColor="@color/red"
            app:layout_constraintEnd_toEndOf="@+id/pickerRateMin"
            app:layout_constraintStart_toStartOf="@+id/pickerRateMin"
            app:layout_constraintTop_toBottomOf="@+id/pickerRateMin" />

        <NumberPicker
            android:id="@+id/pickerRuntimeMax"
            android:layout_width="65dp"
            android:layout_height="125dp"
            android:layout_centerInParent="true"

            android:layout_marginTop="64dp"
            android:textColor="@color/purple_700"
            app:layout_constraintEnd_toEndOf="@+id/pickerRateMax"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/pickerRateMax"
            app:layout_constraintTop_toBottomOf="@+id/pickerRateMax" />

        <TextView

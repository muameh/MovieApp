            android:id="@+id/textView10"
            android:layout_width="109dp"
            android:layout_height="49dp"
            android:layout_marginTop="120dp"
            android:gravity="center"
            android:text="Minimum User Votes"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/textView17"
            app:layout_constraintStart_toStartOf="@+id/textView17"
            app:layout_constraintTop_toBottomOf="@+id/textView17" />

        <NumberPicker
            android:id="@+id/pickerUserVoteMin"
            android:layout_width="65dp"
            android:layout_height="125dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="64dp"
            android:textColor="@color/red"
            app:layout_constraintEnd_toEndOf="@+id/pickerRuntimeMin"
            app:layout_constraintStart_toStartOf="@+id/pickerRuntimeMin"
            app:layout_constraintTop_toTopOf="@+id/tvRuntimeMin" />

        <TextView
            android:id="@+id/tvMinUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="64dp"
            android:textColor="@color/red"
            app:layout_constraintEnd_toEndOf="@+id/pickerUserVoteMin"
            app:layout_constraintStart_toStartOf="@+id/pickerUserVoteMin"
            app:layout_constraintTop_toBottomOf="@+id/pickerUserVoteMin" />

        <NumberPicker
            android:id="@+id/pickerReleaseDateMax"
            android:layout_width="65dp"
            android:layout_height="125dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="128dp"
            android:layout_marginEnd="48dp"
            android:textColor="@color/red"
            app:layout_constraintBottom_toBottomOf="@+id/pickerReleaseDateMin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/pickerReleaseDateMin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.174" />

        <NumberPicker
            android:id="@+id/pickerReleaseDateMin"
            android:layout_width="65dp"
            android:layout_height="125dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="48dp"
            android:layout_marginTop="128dp"

            app:layout_constraintStart_toEndOf="@+id/textView1343"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView1343"
            android:layout_width="73dp"
            android:layout_height="116dp"
            android:layout_marginStart="48dp"
            android:gravity="center"
            android:text="Release Date    (year)"
            app:layout_constraintBottom_toBottomOf="@+id/pickerReleaseDateMin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/pickerReleaseDateMin"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Explore ..."
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <NumberPicker
            android:id="@+id/pickerRateMax"
            android:layout_width="65dp"
            android:layout_height="125dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="64dp"
            android:textColor="@color/red"
            app:layout_constraintBottom_toBottomOf="@+id/pickerRateMin"
            app:layout_constraintEnd_toEndOf="@+id/pickerReleaseDateMax"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/pickerRateMin"
            app:layout_constraintTop_toTopOf="@+id/tvReleaseDateMax"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/tvReleaseDateMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/red"
            app:layout_constraintEnd_toEndOf="@+id/pickerReleaseDateMin"
            app:layout_constraintStart_toStartOf="@+id/pickerReleaseDateMin"
            app:layout_constraintTop_toBottomOf="@+id/pickerReleaseDateMin" />

        <TextView
            android:id="@+id/tvReleaseDateMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/red"
            app:layout_constraintEnd_toEndOf="@+id/pickerReleaseDateMax"
            app:layout_constraintStart_toStartOf="@+id/pickerReleaseDateMax"
            app:layout_constraintTop_toBottomOf="@+id/pickerReleaseDateMax" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="62dp"
            android:layout_height="0dp"
            android:layout_marginTop="100dp"
